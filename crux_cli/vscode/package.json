{
  "name": "crux-analyzer",
  "displayName": "Crux Analyzer",
  "description": "Crux support for Visual Studio Code",
  "private": true,
  "icon": "crux_icon.svg",
  "version": "0.1.0",
  "releaseTag": null,
  "publisher": "Red Badger",
  "repository": {
    "url": "https://github.com/redbadger/crux.git",
    "type": "git"
  },
  "homepage": "https://redbadger.github.io/crux/",
  "license": "MIT OR Apache-2.0",
  "keywords": [
    "crux"
  ],
  "categories": [
    "Other"
  ],
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": false,
      "description": "Crux Analyzer invokes binaries set up by its configuration as well as the Rust toolchain's binaries. A malicious actor could exploit this to run arbitrary code on your machine."
    }
  },
  "engines": {
    "vscode": "^1.66.0"
  },
  "enabledApiProposals": [],
  "scripts": {
    "vscode:prepublish": "pnpm build-base --minify",
    "package": "vsce package -o crux-analyzer.vsix",
    "build-base": "esbuild ./src/main.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node --target=node16",
    "build": "pnpm build-base --sourcemap",
    "watch": "pnpm build-base --sourcemap --watch",
    "lint": "prettier --check . && eslint -c .eslintrc.js --ext ts ./src ./tests",
    "fix": "prettier --write . && eslint -c .eslintrc.js --ext ts ./src ./tests --fix",
    "pretest": "tsc && pnpm build",
    "test": "cross-env TEST_VARIABLE=test node ./out/tests/runTests.js"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  },
  "devDependencies": {
    "@types/node": "~20.3.1",
    "@types/vscode": "~1.79.1",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "@vscode/test-electron": "^2.3.3",
    "@vscode/vsce": "^2.19.0",
    "cross-env": "^7.0.3",
    "esbuild": "^0.18.3",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "prettier": "^2.8.8",
    "tslib": "^2.5.3",
    "typescript": "^5.1.3"
  },
  "activationEvents": [
    "onLanguage:plaintext",
    "workspaceContains:*/Cargo.toml",
    "workspaceContains:*/rust-project.json"
  ],
  "main": "./out/main",
  "contributes": {
    "commands": [
      {
        "command": "crux-analyzer.restoreDefaults",
        "title": "Crux: restore default configuration"
      },
      {
        "command": "crux-analyzer.startServer",
        "title": "Crux: start LSP server"
      },
      {
        "command": "crux-analyzer.stopServer",
        "title": "Crux: stop LSP server"
      },
      {
        "command": "crux-analyzer.restartServer",
        "title": "Crux: restart LSP server"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Crux Analyzer",
      "properties": {
        "crux-analyzer.server.path": {
          "description": "Path to crux CLI executable",
          "default": "crux",
          "type": "string",
          "scope": "machine-overridable",
          "order": 0
        }
      }
    },
    "languages": [
      {
        "id": "crux",
        "extensions": [
          ".crux"
        ],
        "aliases": [
          "Crux LSP",
          "crux-analyzer",
          "Crux Language Server Protocol Client"
        ]
      }
    ]
  }
}
